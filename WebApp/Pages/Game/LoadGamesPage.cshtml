@page
@model WebApp.Pages.Game.LoadGamesPageModel
<div class="container h-100">
    <div class="row align-items-center h-100">
        <div class="col-6 mx-auto bg-darkblue">
            <div class="jumbotron bg-darkblue lead my-12 display-6">
                <body>
                <div class="pb-3">
                    <h4 class="ml-3 mt-2 text-danger bold-red-text">Load a game</h4>
                    <hr/>
                    <div class="row">
                        <div class="col-md-4 ml-3">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger bold-red-text"></div>
                                <div class="form-group">
                                    <label asp-for="SaveGame.SaveGameId" class="control-label bold-red-text"></label>
                                    <select asp-for="SaveGame.SaveGameId" class="form-control" asp-items="@Model.SaveGameSelectList"></select>
                                    <span asp-validation-for="SaveGame.SaveGameId" class="text-danger bold-red-text"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Load" class="btn btn-secondary"/>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div>
                        <a class="btn btn-secondary ml-3" asp-page="../Index">Cancel</a>
                    </div>
                </div>
                </body>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}