@page
@model WebApp.Pages.Game.SavePageModel
<div class="container h-100">
    <div class="row align-items-center h-100">
        <div class="col-6 mx-auto bg-darkblue">
            <div class="jumbotron bg-darkblue lead my-12 display-6">
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger bold-red-text"></div>
            <div class="form-group">
                <div class="text-danger bold-red-text">
                    <label asp-for="SaveGame.SaveGameName" class="control-label"></label>
                </div>
                <input asp-for="SaveGame.SaveGameName" class="form-control" value="@Model.SaveName"/>
                <span asp-validation-for="SaveGame.SaveGameName" class="text-danger bold-red-text"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a class="btn btn-secondary" asp-page="./PlayGame" asp-route-gameOver="@Model.GameOver" asp-route-gameId="@Model.GameId"
       asp-route-fromSave="@Model.FromSave">Cancel</a>
</div>
</div>
</div>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}